<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:id="@+id/btn_http_get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP GET"
            android:onClick="onClick"/>

    <Button
            android:id="@+id/btn_http_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HTTP POST"
            android:onClick="onClick"/>

    <Button
            android:id="@+id/btn_http_sign_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Handling Network Sign-On"
            android:onClick="onClick"/>

    <Button
            android:id="@+id/btn_http_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download a file"
            android:onClick="onClick"/>

</LinearLayout>